{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "sourceMap": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@edsheet/*": [
        "../../packages/*/src"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
