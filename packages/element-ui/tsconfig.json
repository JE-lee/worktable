{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "jsx": "preserve",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "baseUrl": ".",
    "paths": {
      "@core": ["../core/src"],
      "@element-ui/*": ["src/*"],
      "@edsheet/*": ["../../packages/*/src"]
    },
  },
  "include": [
    "src",
    "cypress",
    "test"
  ],
}
